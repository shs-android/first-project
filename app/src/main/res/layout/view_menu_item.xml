<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/layout">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

        <com.google.android.material.button.MaterialButton
                android:id="@+id/titleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/korean_food"
                android:backgroundTint="@color/colorRoseGold"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.148"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.074"/>
        <com.google.android.material.button.MaterialButton
                android:id="@+id/westernView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/western_food"
                app:layout_constraintTop_toTopOf="parent"
                android:backgroundTint="@color/colorRoseGold"
                app:layout_constraintBottom_toTopOf="@+id/dessertView"
                app:layout_constraintVertical_bias="0.585"
                app:layout_constraintStart_toEndOf="@+id/titleView" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toStartOf="@+id/chinaView" android:layout_marginEnd="8dp"
        />
        <com.google.android.material.button.MaterialButton
                android:id="@+id/chinaView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chinese_food"
                android:backgroundTint="@color/colorRoseGold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.146"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.934"/>
        <com.google.android.material.button.MaterialButton
                android:id="@+id/dessertView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dessert"
                app:layout_constraintBottom_toBottomOf="parent"
                android:backgroundTint="@color/colorRoseGold"
                app:layout_constraintStart_toEndOf="@+id/japanView"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/school_foodView"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="464dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.99"/>

        <com.google.android.material.button.MaterialButton
                android:id="@+id/school_foodView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/school_food"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:backgroundTint="@color/colorRoseGold"
                app:layout_constraintTop_toBottomOf="@+id/chinaView"
                app:layout_constraintVertical_bias="0.127"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="292dp"/>
        <com.google.android.material.button.MaterialButton
                android:id="@+id/japanView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/japanese_food"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:backgroundTint="@color/colorRoseGold"
                android:layout_marginBottom="100dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/titleView" app:layout_constraintVertical_bias="0.144"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="292dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>